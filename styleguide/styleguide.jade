extends structure/_includes/_layout
block meta
	base(target="_blank")
block styles	
	link(href='https://fonts.googleapis.com/css?family=Quicksand:400,700|Montserrat:400,700', rel='stylesheet')
	link(href='assets/styles/structure.css', rel='stylesheet')
	link(rel="stylesheet", href="styleguide/assets/styles/styleguide.css")
	each module in modulesData
			- var stylesheet = 'modules/' + module.order + '_' + module.id + '/' + module.id + '.css'
			link(href=stylesheet, rel='stylesheet')

block content
	.huge-iframe-content
		include structure/_templates/_modules.jade
		include structure/_templates/_footer.jade

block scripts
	script(src="structure/scripts/vendor/jquery-1.11.1.min.js")
	script(src="structure/scripts/vendor/prism.js")
	script(src="structure/scripts/vendor/tidy.js")
	script(src="structure/scripts/iframe.js")
	each module in modulesData
		if module.scripts
			each script in module.scripts
				- var folder = 'modules/' + module.order + '_' + module.id + '/'
				script(src='#{folder}#{script}')